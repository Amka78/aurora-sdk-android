<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_sdkexample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.auroradreamband.SDKExampleActivity">


        <Button
            android:id="@+id/button11"
            android:layout_width="63dp"
            android:layout_height="49dp"
            android:layout_marginEnd="32dp"
            android:onClick="onStopScan"
            android:text="Stop"
            app:layout_constraintBaseline_toBaselineOf="@+id/button10"
            app:layout_constraintBottom_toBottomOf="@+id/button10"
            app:layout_constraintEnd_toStartOf="@+id/button3" />

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onConnect"
            android:text="Connect"
            app:layout_constraintBaseline_toBaselineOf="@+id/button"
            app:layout_constraintBottom_toBottomOf="@+id/button"
            app:layout_constraintEnd_toStartOf="@+id/btnCustomCommand" />

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap connect to scan for a Dreamband device"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/progressBarBleActive"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statusTextView" />

        <Button
            android:id="@+id/button2"
            android:layout_width="66dp"
            android:layout_height="49dp"
            android:layout_marginEnd="40dp"
            android:onClick="onStartScan"
            android:text="Scan"
            app:layout_constraintEnd_toEndOf="@+id/button8"
            app:layout_constraintTop_toBottomOf="@+id/progressBarBleActive" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onDisconnect"
            android:text="Disconnect"
            app:layout_constraintTop_toBottomOf="@+id/progressBarBleActive"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/txtCommand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:hint="Enter custom command"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <Button
            android:id="@+id/btnCustomCommand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCustomCommand"
            android:text="Send"
            app:layout_constraintBottom_toBottomOf="@+id/txtCommand"
            app:layout_constraintStart_toEndOf="@+id/button_unsyncedSessionCount" />

        <EditText
            android:id="@+id/responseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="75dp"
            android:ems="30"
            android:hint="Command response will be shown here"
            android:inputType="textMultiLine"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCommand" />

        <Button
            android:id="@+id/btnOSVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:onClick="onGetOSVersion"
            android:text="Get OS Version"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/responseText" />

        <Button
            android:id="@+id/button_unsyncedSessionCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:onClick="onGetUnsyncedSessionCount"
            android:text="Get Unsynced Session Count"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <Button
            android:id="@+id/btnListProfiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onListProfiles"
            android:text="List Profiles"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/button_unsyncedSessionCount" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Name:"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtProfileName"
            app:layout_constraintBottom_toBottomOf="@+id/txtProfileName"
            app:layout_constraintEnd_toEndOf="@+id/btnListProfiles" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:onClick="onObserveEvents"
            android:text="Observe Events"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnOSVersion"
            app:layout_constraintBottom_toBottomOf="@+id/btnOSVersion"
            app:layout_constraintEnd_toEndOf="@+id/btnCustomCommand" />

        <EditText
            android:id="@+id/txtProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Profile Name"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/button_unsyncedSessionCount"
            app:layout_constraintEnd_toEndOf="@+id/responseText" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onDisableEvents"
            android:text="Disable Events"
            app:layout_constraintStart_toStartOf="@+id/button3"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_unsyncedSessionCount"
            app:layout_constraintBottom_toBottomOf="@+id/button_unsyncedSessionCount" />

        <Button
            android:id="@+id/btnReadProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onReadProfile"
            android:text="Read Profile"
            app:layout_constraintStart_toStartOf="@+id/btnLoadProfile"
            app:layout_constraintTop_toBottomOf="@+id/txtProfileName" />

        <Button
            android:id="@+id/btnLoadProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:onClick="onLoadProfile"
            android:text="Load Profile"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/btnReadProfile" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onUnloadProfile"
            android:text="Unload Profile"
            app:layout_constraintStart_toStartOf="@+id/txtProfileName"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnLoadProfile"
            app:layout_constraintBottom_toBottomOf="@+id/btnLoadProfile" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onUpdateProfile"
            android:text="Update Profile"
            app:layout_constraintTop_toBottomOf="@+id/txtProfileName"
            app:layout_constraintEnd_toEndOf="@+id/button6" />

        <Button
            android:id="@+id/buttonCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:onClick="onCreateProfile"
            android:text="Create Profile"
            app:layout_constraintStart_toStartOf="@+id/btnLoadProfile"
            app:layout_constraintTop_toBottomOf="@+id/btnLoadProfile" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:onClick="onCreateDir"
            android:text="Create Example Directory"
            app:layout_constraintStart_toStartOf="@+id/buttonCreate"
            app:layout_constraintTop_toBottomOf="@+id/buttonCreate" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:onClick="onWriteFile"
            android:text="Write file"
            app:layout_constraintStart_toStartOf="@+id/button7"
            app:layout_constraintTop_toBottomOf="@+id/button7" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onReadFile"
            android:text="Read File"
            app:layout_constraintTop_toTopOf="@+id/button8"
            app:layout_constraintEnd_toEndOf="@+id/button" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>