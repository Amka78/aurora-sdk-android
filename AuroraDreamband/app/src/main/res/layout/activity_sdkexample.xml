<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sdkexample"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.auroradreamband.SDKExampleActivity">


    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap connect to scan for a Dreamband device" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarBleActive"
        android:indeterminate="true"
        android:visibility="invisible"
        android:layout_below="@+id/statusTextView"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBarBleActive"
        android:layout_alignParentStart="true"
        android:id="@+id/button2"
        android:onClick="onConnect" />

    <Button
        android:text="Disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@+id/progressBarBleActive"
        android:layout_toEndOf="@+id/button2"
        android:layout_marginStart="25dp"
        android:onClick="onDisconnect" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtCommand"
        android:hint="Enter custom command"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <Button
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCustomCommand"
        android:layout_alignBottom="@+id/txtCommand"
        android:layout_toEndOf="@+id/button_unsyncedSessionCount"
        android:onClick="onCustomCommand" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="30"
        android:height="75dp"
        android:id="@+id/responseText"
        android:hint="Command response will be shown here"
        android:layout_below="@+id/txtCommand"
        android:layout_alignParentStart="true"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btnOSVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onGetOSVersion"
        android:text="Get OS Version"
        android:layout_below="@+id/responseText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <Button
        android:id="@+id/button_unsyncedSessionCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onGetUnsyncedSessionCount"
        android:text="Get Unsynced Session Count"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Observe Events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:onClick="onObserveEvents"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/btnOSVersion"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Disable Events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_above="@+id/button_unsyncedSessionCount"
        android:layout_toEndOf="@+id/button3"
        android:layout_marginStart="19dp"
        android:onClick="onDisableEvents" />


</RelativeLayout>
